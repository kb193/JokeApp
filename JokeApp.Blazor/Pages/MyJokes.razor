
@page "/MyJokes"

<div class="container mt-5">

            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Actions</th>
                        <th scope="col">Setup</th>
                        <th scope="col">Delivery</th>
                        <th scope="col">Category</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var Joke in Jokes)
                        {
                        <tr class="@(ActiveJoke.id == Joke.id ? "active" : "table-light")" @onclick="() => OnClickRow(Joke)">
                            <td class="icon-cell">
                               <i class="bi bi-trash trash" @onclick="() => DeleteJoke(Joke)"></i>
                            </td>
                            <td>@(Joke.type == "single" ? Joke.joke : Joke.setup)</td>
                            <td>@Joke.delivery</td>
                            <td>@Joke.category</td>
                        </tr>
                        }
                </tbody>
            </table>
        </div>